# Environment variables for Docker Compose
# Copy this file to .env and update the values

# JWT Configuration (CRITICAL - Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-at-least-32-characters

# Database Configuration
POSTGRES_DB=tourist_village_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password

# Backend Configuration
NODE_ENV=production
DATABASE_URL=postgresql://postgres:your-secure-database-password@db:5432/tourist_village_db

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@touristvillage.com
PGADMIN_DEFAULT_PASSWORD=admin123

# SSL Configuration (for production)
# SSL_CERT_PATH=/etc/ssl/certs/cert.pem
# SSL_KEY_PATH=/etc/ssl/private/key.pem
